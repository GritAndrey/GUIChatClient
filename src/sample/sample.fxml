<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.Controller">
    <top>
        <TextFlow styleClass="alert, alert-success">
            <Text></Text>
        </TextFlow>
    </top>
    <left>
        <TextArea fx:id="userListTextArea"  editable="false" prefHeight="161.0" prefWidth="103.0" />
    </left>
    <right>
        <VBox alignment="BOTTOM_RIGHT" spacing="10">
            <Button onAction="#send" styleClass="btn, btn-lg, btn-success" text="Send -&gt;" />
            <Button fx:id="connectButton" onAction="#connect" styleClass="btn, btn-lg, btn-success" text="Connect" />
        </VBox>
    </right>
    <center>
        <TextArea fx:id="textArea" editable="false" styleClass="text-primary" />
    </center>
    <bottom>
        <TextField fx:id="textField" onAction="#send" styleClass="text-primary" text="enter message" />
    </bottom>

</BorderPane>
